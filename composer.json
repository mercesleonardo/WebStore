{
    "name": "webstore/webstore",
    "description": "Project for storing information about a WebStore",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Core\\": "Core/"
        },
        "files": [
            "src/helpers.php",
            "Core/Http/helpers.php",
            "Core/Html/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Leonardo Carvalho",
            "email": "leonardokarvalho@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "monolog/monolog": "^3.5",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.6",
        "psr/container": "^2.0",
        "egulias/email-validator": "^4.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "laravel/pint": "^1.17",
        "phpstan/phpstan": "^1.12"
    },
    "scripts": {
        "style": "./vendor/bin/pint",
        "stan": "./vendor/bin/phpstan analyse"
    }
}
